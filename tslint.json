{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 150,
        "tabWidth": 2,
        "bracketSpacing": true
      }
    ]
  }
}
